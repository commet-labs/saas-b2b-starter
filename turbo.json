{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "@repo/dashboard#build": {
      "dependsOn": ["@repo/database#db:migrate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": [
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "RESEND_API_KEY",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "DATABASE_URL",
        "DATABASE_URL_UNPOOLED",
        "KV_URL",
        "KV_REST_API_READ_ONLY_TOKEN",
        "REDIS_URL",
        "KV_REST_API_TOKEN",
        "KV_REST_API_URL",
        "COMMET_API_KEY",
        "BLOB_READ_WRITE_TOKEN"
      ]
    },
    "@repo/database#db:migrate": {
      "cache": false,
      "inputs": ["src/schema.ts", "drizzle/**"],
      "env": ["DATABASE_URL"]
    },
    "@repo/database": {
      "cache": false,
      "inputs": ["src/schema.ts", "drizzle/**"],
      "env": ["DATABASE_URL"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false,
      "dependsOn": []
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["@repo/database#db:migrate"]
    }
  }
}
