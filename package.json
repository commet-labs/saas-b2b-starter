{
  "name": "shadcn-ui-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "clean": "turbo clean && rm -rf node_modules",
    "lint": "turbo lint",
    "lint:check": "biome check .",
    "lint:fix": "biome check . --write",
    "typecheck": "turbo typecheck",
    "db:generate": "pnpm --filter @repo/database run generate",
    "db:migrate": "pnpm --filter @repo/database run db:migrate",
    "db:push": "pnpm --filter @repo/database run db:push",
    "db:seed:fresh": "pnpm --filter @repo/database run db:seed:fresh",
    "db:studio": "pnpm --filter @repo/database run db:studio",
    "test": "pnpm --filter web test:run"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@repo/typescript-config": "workspace:*",
    "turbo": "^2.4.2",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  }
}
